= form_for @plug do |f|
  - if @plug.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plug.errors.count, "error")} prohibited this plug from being saved:"
      %ul
        - @plug.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :desc
    = f.text_field :desc
  .field
    = f.label :club
    = f.text_field :club
  .actions
    = f.submit 'Save'
